{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext","ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/web/*"],
      "@pages/*": ["src/web/pages/*"],
      "@hooks/*": ["src/web/hooks/*"],
      "@utils/*": ["src/web/utils/*"],
      "@components/*": ["src/web/components/*"],
      "@abis/*": ["src/web/abis/*"],
      "@connections/*": ["src/web/connections/*"],
      "@interfaces/*": ["src/server/interfaces/*"],
      "@config/*": ["src/server/config/*"],
      "@services/*": ["src/server/services/*"],
      "@entity/*": ["src/server/entity/*"]
    },
    "typeRoots": ["src/server/typings/*","src/web/types/*","node"],
  },

  "include": ["**/*","src/server/*","src/web/*"],
}
